{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Assembly metrics bar chart",
  "params": [
    {
      "name": "selected_sample",
      "value": "All"
    },
    {
      "name": "metric_field",
      "value": "contigs_n50"
    },
    {
      "name": "metric_title",
      "value": "Contig N50 (bp)"
    }
  ],
  "data": {
    "name": "source"
  },
  "transform": [
    {
      "filter": "(selected_sample == 'All') || (datum.sample_id == selected_sample)"
    },
    {
      "calculate": "datum[metric_field]",
      "as": "metric_value"
    }
  ],
  "mark": {
    "type": "bar",
    "opacity": 0.85
  },
  "width": "container",
  "height": {"step": 25},
  "encoding": {
    "x": {
      "field": "metric_value",
      "type": "quantitative",
      "title": "Assembly Metric"
    },
    "y": {
      "field": "mag_id",
      "type": "nominal",
      "axis": null,
      "sort": {"field": "sort_order", "order": "ascending"}
    },
    "tooltip": [
      {"field": "sample_id", "type": "nominal", "title": "Sample ID"},
      {"field": "mag_id", "type": "nominal", "title": "MAG ID"},
      {"field": "metric_value", "type": "quantitative", "title": "Value"}
    ]
  },
  "config": {
    "background": "#fff",
    "font": "Open Sans, Arial, sans-serif",
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": true,
      "gridColor": "#eaeaea"
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "header": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "view": {
      "stroke": "#eaeaea"
    }
  }

}

