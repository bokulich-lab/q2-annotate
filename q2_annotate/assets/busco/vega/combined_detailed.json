{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Combined BUSCO and Assembly metrics chart",
  "params": [
    {
      "name": "selected_sample",
      "value": "All"
    },
    {
      "name": "show_labels",
      "value": false
    },
    {
      "name": "metric_field",
      "value": "contigs_n50"
    },
    {
      "name": "metric_title",
      "value": "Contig N50 (bp)"
    }
  ],
  "spacing": 5,
  "hconcat": [
    {
      "data": {"name": "busco_data"},
      "transform": [
        {
          "filter": "(selected_sample == 'All') || (datum.sample_id == selected_sample)"
        },
        {
          "calculate": "datum.category == 'single' ? 1 : datum.category == 'duplicated' ? 2 : datum.category == 'fragmented' ? 3 : 4",
          "as": "order"
        }
      ],
      "mark": {
        "type": "bar",
        "opacity": 0.85
      },
      "width": 400,
      "height": {"step": 25},
      "encoding": {
        "x": {
          "field": "BUSCO_percentage",
          "type": "quantitative",
          "aggregate": "sum",
          "stack": "normalize",
          "title": "BUSCO fraction"
        },
        "y": {
          "field": "mag_id",
          "type": "nominal",
          "axis": {
            "titleFontSize": 0,
            "labels": true,
            "labelExpr": "substring(datum.label, 0, 8)"
          },
          "sort": null
        },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": ["single", "duplicated", "fragmented", "missing"],
            "range": ["#4A90A4", "#F5A623", "#D2691E", "#A0522D"]
          },
          "legend": null
        },
        "order": {
          "field": "order",
          "type": "quantitative",
          "sort": "ascending"
        },
        "tooltip": [
          {"field": "sample_id", "type": "nominal", "title": "Sample ID"},
          {"field": "mag_id", "type": "nominal", "title": "MAG ID"},
          {"field": "dataset", "type": "nominal", "title": "Lineage dataset"},
          {"field": "frac_markers", "type": "nominal", "title": "Approx. markers in category"},
          {"field": "BUSCO_percentage", "type": "quantitative", "title": "% BUSCOs"}
        ]
      }
    },
    {
      "data": {"name": "assembly_data"},
      "transform": [
        {
          "filter": "(selected_sample == 'All') || (datum.sample_id == selected_sample)"
        },
        {
          "calculate": "datum[metric_field]",
          "as": "metric_value"
        }
      ],
      "mark": {
        "type": "bar",
        "opacity": 0.85
      },
      "width": 150,
      "height": {"step": 25},
      "encoding": {
        "x": {
          "field": "metric_value",
          "type": "quantitative",
          "title": "Assembly Metric"
        },
        "y": {
          "field": "mag_id",
          "type": "nominal",
          "axis": null,
          "sort": null
        },
        "tooltip": [
          {"field": "sample_id", "type": "nominal", "title": "Sample ID"},
          {"field": "mag_id", "type": "nominal", "title": "MAG ID"},
          {"field": "metric_value", "type": "quantitative", "title": "Value"}
        ]
      }
    }
  ],
  "config": {
    "background": "#fff",
    "font": "Open Sans, Arial, sans-serif",
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": true,
      "gridColor": "#eaeaea"
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "header": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "title": {
      "fontSize": 14,
      "fontWeight": "bold"
    },
    "view": {
      "stroke": "#eaeaea"
    }
  }
}

